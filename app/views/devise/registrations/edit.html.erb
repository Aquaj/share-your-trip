<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">

    <h2>Édition du profil</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, label: "Addresse e-mail", autofocus: true %>
        <%= f.input :avatar, as: :attachinary, required: :true, label: "Photo" %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>En attente de confirmation pour: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password, autocomplete: "off", hint: "Laisser vide pour conserver le même mot de passe.", label: "Mot de passe", required: false %>
        <%= f.input :password_confirmation, required: false, label: "Confirmation du mot de passe." %>
        <%= f.input :current_password, hint: "Veuillez entrer votre mot de passe actuel pour valider les changements.", label: "Mot de passe actuel", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update" %>
      </div>
    <% end %>

    <h3>Supprimer mon compte</h3>

    <p>Non-satisfait de ShareYourTrip? <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Êtes-vous sûrs de vouloir nous quitter?" }, method: :delete %></p>

    <%= link_to "Retour", :back %>

    </div>
  </div>
</div>
