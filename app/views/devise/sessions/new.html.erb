<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h2>Connexion</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, label: "Adresse mail" %>
        <%= f.input :password, required: false, label: "Mot de passe" %>
        <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi" if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Me connecter" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>


