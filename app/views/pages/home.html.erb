<% content_for :navbar do %>
  <%= render "shared/navbar", transparent: true %>
<% end %>

<link href='https://fonts.googleapis.com/css?family=Raleway:300' rel='stylesheet' type='text/css'>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.2) 100%), url('<%= image_path("background.jpg") %>');">
  <div class="banner-content">
    <h1>Découvrez les meilleurs coups de coeur de nos voyageurs</h1>
    <%= render "shared/search_input" %>
  </div>
</div>

<div class="container home-content">
  <div class="row">
    <h2>Les coups de coeur du moment</h2>
    <div class="block-contain">
      <div class="container-fluid">
        <div class="row">
          <% @experiences.each do |experience| %>
            <div class="col-xs-12 col-sm-4">
              <%= render "shared/card", experience: experience %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <h2>Comment ça marche</h2>
    <div class="col-md-4 text-center">
      <%= image_tag 'itineraire.png' %>
      <p class="feature">Découvrez</p>
      <p class="feature">Inspirez vous des coups de coeur des voyageurs.</p>
    </div>
    <div class="col-md-4 text-center">
      <%= image_tag 'carnet.png' %>
      <p class="feature">Partagez</p>
      <p class="feature">Stockez vos coups de coeur de voyage.</p>
    </div>
    <div class="col-md-4 text-center">
      <%= image_tag 'valise.png' %>
      <p class="feature">Publiez</p>
      <p class="feature">Échangez vos coups de coeur avec vos proches.</p>
    </div>
  </div>
</div>
