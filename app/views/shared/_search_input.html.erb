<div class="navbar-wagon-search">


  <%= simple_form_for :search, url: experiences_path, method: 'get', html: { class: 'form-search' } do |f| %>
  <%= f.input_field :address, input_html: { id: "user_input_autocomplete_address" }, placeholder: "Pays/villes.", class: "input-medium search-query" %>
  <%= f.submit "Find!", class: "btn" %>
<% end %>

  <!-- Include Google Maps JS API -->
