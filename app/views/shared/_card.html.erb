<div class="block-contain">
  <div class="container-fluid">
    <div class="row">

      <% @experiences.each do |experience| %>
        <div class="col-xs-12 col-sm-4">
          <%= link_to experience do %>
            <div class="card text-center" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.5)), url('<%= cl_image_path experience.photos[0].path, size: "500x300", crop: :fill; %>');">
              <p class="card-user">
                <%= cl_image_tag experience.user.avatar.path, class:"avatar-radius", size: "50x50",crop: :fill, gravity: :faces, title: experience.user.first_name %>
              </p>
              <span class="rating">
                <%= render "shared/rating", rating: experience.average_rating %>
              </span>
              <p class="card-category">
              <%= experience.category %>
              </p>
              <div class="card-description">
                <h3><%= experience.title %></h3>
                <p><%= experience.description[0..39] + "..." %></p>
                <p><%= experience.address %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
