<div class="col-sm-6 col-md-4">
  <div class="review">
    <div class="author">
      <%= cl_image_tag(locals[:review].user.avatar.path, { size: '40x40', crop: :thumb, radius: :max, gravity: :face}) %>
      <span class="username"><%= locals[:review].user.name.capitalize %></span>
    </div>
    <div class="review-content">
      <%= locals[:review].review %>
    </div>
    <div class="rating">
      <% (locals[:review].rating).times do %>
        <%= icon("star") -%>
      <% end %>
      <% (5-locals[:review].rating).times do %>
        <%= icon("star-o") -%>
      <% end %>
    </div>
    <% if user_signed_in? && locals[:review].user == current_user %>
      <%= link_to icon('pencil-square-o'), edit_cocktail_review_path(locals[:review].cocktail, Review.where(user_id: locals[:review].user.id, cocktail_id: @cocktail.id).first), class: "show-link show-link-right" %>
    <% end %>
  </div>
</div>
