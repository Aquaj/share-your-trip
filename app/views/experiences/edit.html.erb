<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h2>Éditez votre coup de coeur.</h2>
      <%= simple_form_for @experience do |f| %>
        <%= f.error_notification %>
        <%= f.input :title, label: "Titre" %>
        <%= f.input :category, as: :select, label: "Catégories", collection: Experience.categories %>
        <%= f.input :description, label: "Description" %>
        <%= f.input :address, label: "Adresse", input_html: { id: "experience_autocomplete" } %>
        <%= f.input :photos, as: :attachinary %>
        <hr>
        <%= f.button :submit, "Partage !", class:'btn btn-success btn-block' %>
      <% end %>
    </div>
  </div>
</div>

<% content_for :after_js do %>
  <script>
    $(document).ready(function(){

    google.maps.event.addDomListener(window, 'load', function() {
      initializeAutocomplete('experience_autocomplete');
    });

   });
  </script>
<% end %>
